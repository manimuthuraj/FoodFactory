<%- include("../partials/header") %>
    <div class="container row">
        <div class="add col-md-6">
            <div>
                Register
            </div>
            <form action="/signup" method="POST" id="myform">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" required class="form-control" id="name" name="username" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="password">password</label>
                    <input type="password" required class="form-control" id="password" name="password" placeholder="password">
                </div>

                <div class="form-group">
                    <label for="mail">Mail</label>
                    <input type="mail" required class="form-control" id="mail" name="mail" placeholder="mail">
                </div>

                <div>
                    <button id="submit" type="submit" class="btn btn-warning ">Submit</button>
                </div>
                <p id="required"></p>
            </form>
        </div>
    </div>
    <%- include("../partials/footer") %>
<%- include("../partials/header") %>


    <div class="container">
        <div class="add">
            <div>
                <b>Order</b>
            </div>
            <p>
                Name:
                <%=orders.name%>
            </p>

            <form action="/order/<%=orders._id%>?_method=PUT%>" method="POST" id="myform">
                <div class=" form-group ">
                    <label for="Name ">Number of item</label>
                    <input type="number" class="form-control " id="name " name="order[noItems]" value="<%=orders.noItems%>">
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="order[moT]" id="active" value="bike" checked>
                    <label class="form-check-label" for="active">Bike</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="order[moT]" id="block" value="cycle">
                    <label class="form-check-label " for="block"> Cycle</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="order[status]" id="active" value="fastdelivery" checked>
                    <label class="form-check-label" for="active">Fast delivery</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="order[status]" id="block" value="normaldelivery">
                    <label class="form-check-label " for="block"> Normal delivery</label>
                </div>
                <div>
                    <button type="submit" id="submit" class="btn btn-danger ">Edit</button>
                </div>
                <p id="required"></p>
            </form>
        </div>
    </div>

    <%- include("../partials/footer") %>